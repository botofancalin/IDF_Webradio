{
	"version": "0.1.0",
	"configurations": [	
		{
			"name": "Flash + Debug",
			"type": "gdb",
			"request": "launch",
			"target": "./build/${workspaceFolderBasename}.elf",
			"cwd": "${workspaceFolder}",
			"gdbpath": "xtensa-esp32-elf-gdb",
			"preLaunchTask": "OpenOCD",
			"autorun": [
				"target remote :3333",
				"mon reset halt",
				"mon program_esp32 ./build/${workspaceFolderBasename}.bin 0x10000",
				"mon reset halt",
				"flushregs",
				"thb app_main",
				"c"
			],
		},
		{
			"name": "Debug",
			"type": "gdb",
			"request": "launch",
			"target": "./build/${workspaceFolderBasename}.elf",
			"cwd": "${workspaceFolder}",
			"gdbpath": "xtensa-esp32-elf-gdb",
			"preLaunchTask": "OpenOCD",
			"autorun": [
				"target remote :3333",
				"mon reset halt",
				"flushregs",
				"thb app_main",
				"c"
			],
		}
	]
}